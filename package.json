{
  "name": "step8up-week8-node-express-blog",
  "version": "0.3.0",
  "description": "Full-Stack Blog Application using Node.js and Express",
  "private": true,
  "scripts": {
    "prebuild": "rimraf ./public",
    "build": "parcel build src/client/*.html --dist-dir ./public",
    "start": "node src/server/server.js",
    "dev": "nodemon src/server/server.js",
    "lint": "eslint src/**/*.js",
    "prettier": "npx prettier ./src/**/*.js --write",
    "seed": "node src/server/seeds/seed.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e --runInBand",
    "validate": "npx stylelint src/**/*.css; npx html-validate src/**/*.html",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,css,html}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KamilWo/step8up-week8-node-express-blog.git"
  },
  "keywords": [
    "blog",
    "tech blog",
    "full-stack application",
    "node.js",
    "nodejs",
    "express",
    "express.js"
  ],
  "author": "Kamil Wozniak",
  "license": "GPLv3",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/KamilWo/step8up-week8-node-express-blog/issues"
  },
  "homepage": "https://github.com/KamilWo/step8up-week8-node-express-blog#readme",
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/server/**/*.js"
    ],
    "testMatch": [
      "**/tests/unit/**/*.js",
      "**/tests/integration/**/*.js",
      "**/tests/e2e/**/*.js"
    ]
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "connect-session-sequelize": "^8.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "uuid": "^11.1.0",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "html-validator": "^5.1.18",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "parcel": "^2.15.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "stylelint": "^16.20.0",
    "stylelint-config-standard": "^38.0.0",
    "supertest": "^7.1.3"
  }
}
